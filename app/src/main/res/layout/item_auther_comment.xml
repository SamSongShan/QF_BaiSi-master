<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:background="#efcece"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/img_anothercomment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#e17c7c"
            android:padding="10dp"
            android:text="1"
        />
        <TextView
            android:id="@+id/tv_anothercomment_roomname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_anothercomment_num"
            android:text="田小豆视频"
            android:textColor="#2027e4"/>
        <TextView
            android:id="@+id/tv_anothercomment_numDZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/img_anothercomment_dianzan"
            android:text="201"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/img_anothercomment_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bt_dainzan"/>
        <ImageView
            android:id="@+id/img_anothercomment_dianzan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/dianzan"
            android:visibility="gone"/>

    </RelativeLayout>
    <TextView
        android:text="qwweeerr"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_anothercomment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>