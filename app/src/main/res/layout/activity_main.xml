<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.song.baisi.main.MainActivity">



    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>
    <!--<android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@android:id/content"
            android:layout_width="0dp"
            android:layout_height="0dp">

        </FrameLayout>

    </android.support.v4.app.FragmentTabHost>
    !-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/relat_jinghua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_jinghua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" android:src="@drawable/bt_jinghua"/>
            <TextView
                android:id="@+id/tv_jinghua"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@+id/img_jinghua"
                android:layout_centerHorizontal="true"
                android:text="精华"
                android:textColor="@color/bt_mian"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relat_xintie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_xintie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bt_xintie"/>
            <TextView
                android:id="@+id/tv_xintie"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@+id/img_xintie"
                android:layout_centerHorizontal="true"
                android:text="新帖"
                android:textColor="@color/bt_mian"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_fabiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/main_bottom_writeposts_normal"/>
        <RelativeLayout
            android:id="@+id/relat_guanzhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bt_guanzhu"/>
            <TextView
                android:id="@+id/tv_guanzhu"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@+id/img_guanzhu"
                android:layout_centerHorizontal="true"
                android:text="关注"
                android:textColor="@color/bt_mian"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relat_wode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_wode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/bt_wode"/>
            <TextView
                android:id="@+id/tv_wode"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@+id/img_wode"
                android:layout_centerHorizontal="true"
                android:text="我的"
                android:textColor="@color/bt_mian"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
