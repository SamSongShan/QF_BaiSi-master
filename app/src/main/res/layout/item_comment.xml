<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:roundAsCircle="true"/>
        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/simple_head"
            android:src="@drawable/personal_sex_men"/>
        <TextView
            android:id="@+id/tv_roomname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_sex"
            android:text="田小豆视频"
            android:textColor="#2027e4"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/img_dianzan"
            android:text="201"
            android:textSize="12sp"/>
        <ImageView
            android:id="@+id/img_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bt_dainzan"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/img_dianzan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/dianzan"/>

    </RelativeLayout>
    <ListView
        android:layout_marginLeft="50dp"
        android:id="@+id/lv_anothercomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView
        android:layout_marginLeft="50dp"
        android:id="@+id/tv_comment_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"/>
</LinearLayout>